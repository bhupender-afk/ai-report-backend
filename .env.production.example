# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to Git - it contains sensitive credentials

# Production MongoDB Connection
# Get your MongoDB connection string from MongoDB Atlas or your MongoDB provider
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority&appName=YourApp

# Server Configuration
PORT=8080
NODE_ENV=production
MOCK_PAYMENTS=false
FRONTEND_URL=http://your-domain.com

# JWT Configuration
# Generate a strong secret key for production
JWT_SECRET=your_strong_jwt_secret_key_here
JWT_EXPIRY=7d

# Email Configuration (SMTP)
# Configure your email service provider
SMTP_HOST=your.smtp.host.com
SMTP_PORT=465
SMTP_USER=your-email@domain.com
SMTP_SECURE=true
SMTP_PASS=your_email_password_or_app_password
SMTP_FROM="Your App Name <your-email@domain.com>"

# Payment Gateway Configuration
# Use production keys for live payments
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret

# External API Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-endpoint